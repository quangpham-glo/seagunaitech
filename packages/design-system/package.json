{
  "name": "@seaguntech/design-system",
  "private": true,
  "type": "module",
  "description": "Tailwind CSS v4 design system for the Seaguntech monorepo",
  "exports": {
    ".": "./globals.css",
    "./design-tokens": "./design-tokens.css",
    "./theme-light": "./theme-light.css",
    "./theme-dark": "./theme-dark.css",
    "./globals": "./globals.css",
    "./postcss-config": "./postcss-config.js"
  },
  "files": [
    "*.css",
    "postcss-config.js"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "clean": "git clean -xdf .cache .turbo node_modules",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint --flag unstable_native_nodejs_ts_config"
  },
  "dependencies": {
    "@tailwindcss/postcss": "catalog:web-ui",
    "postcss": "catalog:web-ui",
    "tailwindcss": "catalog:web-ui"
  },
  "devDependencies": {
    "@seaguntech/eslint-config": "workspace:*",
    "@seaguntech/prettier-config": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@seaguntech/prettier-config/base"
}

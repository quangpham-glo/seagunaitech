{
  "name": "@seaguntech/logger",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Pino-based logger utilities for the Seaguntech monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/seaguntech/seaguntech-monorepo-template.git"
  },
  "homepage": "https://github.com/seaguntech/seaguntech-monorepo-template",
  "bugs": {
    "url": "https://github.com/seaguntech/seaguntech-monorepo-template/issues"
  },
  "keywords": [
    "logger",
    "pino",
    "typescript",
    "observability"
  ],
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./http": {
      "types": "./dist/http.d.ts",
      "import": "./dist/http.js",
      "require": "./dist/http.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist node_modules",
    "test": "vitest run"
  },
  "dependencies": {
    "pino": "catalog:logger-libs",
    "pino-http": "catalog:logger-libs",
    "pino-pretty": "catalog:logger-libs"
  },
  "devDependencies": {
    "@seaguntech/eslint-config": "workspace:*",
    "@seaguntech/prettier-config": "workspace:*",
    "@seaguntech/typescript-config": "workspace:*",
    "@seaguntech/vitest-config": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:testing",
    "@vitest/coverage-v8": "catalog:testing",
    "@vitest/ui": "catalog:testing"
  },
  "prettier": "@seaguntech/prettier-config/base"
}
